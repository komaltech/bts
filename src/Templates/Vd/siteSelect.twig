{% extends 'layouts/head.twig' %}
{% block content %}
    <section id="content" class="table-layout animated fadeIn borderedBackground">
        <div class="container-fluid">
            <div class="f-center">
                <br>
                <i class="fa fa-5x fa-globe"></i>
            </div>
            <h1 class="center">Please Select Site</h1>
            <h3 class="center text-danger"><i class="fa fa-exclamation"></i> If site not listed, it may an appropriate step not completed yet. <i class="fa fa-exclamation"></i></h3>
            <br>
            <div class="row">
                <div class="col-md-3">&nbsp;</div>
                <div class="col-md-6">
                    <div class="login-box-body center">
                        <form method="post">
                            <div class="form-group">
                                <select class="form-control" id="site_name" name="site_name">
                                    {% for list in listSite %}
                                        <option value="{{ list.siteName }}">{{ list.siteName }} - {{ list.formId }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <input type="submit" value="Select Site" class="btn btn-primary btn-flat btn-lg btn-block">
                        </form>
                    </div>
                </div>
                <div class="col-md-3">&nbsp;</div>
            </div>
        </div>
    </section>
{% endblock %}
{% block customJS %}
{% endblock %}