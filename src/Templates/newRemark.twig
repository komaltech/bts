{% extends 'layouts/head.twig' %}
{% block content %}
    <section id="content" class="table-layout animated fadeIn">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-6 center-block">
                    <div class="f-center">
                        <i class="imoon imoon-5x imoon-file"></i>
                        <h1>new Remark</h1>
                    </div>
                    <div class="panel" style="border:6px solid rgba(204, 204, 204,0.5)">
                        <div class="panel-heading">
                            <span class="panel-title"><i class="imoon imoon-quill"></i> Input Remark</span>
                        </div>
                        <div class="panel-body">
                            {{ form_start(form, {'method': 'POST', 'action': 'newRemark','attr': {'class': 'form-horizontal'}}) }}
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <span class="append-icon right"></span>
                                    {{ form_row(form.komentar) }}
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom:0 !important;">
                                <div class="col-lg-12">
                                    {{ form_row(form.kirim) }}
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}