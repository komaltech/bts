{% extends 'layouts/head.twig' %}
{% block content %}
    <section id="content" class="table-layout animated fadeIn">
        <div class="container-fluid">
            <br>
            <div class="row">
                <div class="col-md-3">
                    &nbsp;
                </div>
                <div class="col-md-6 center-block">
                    <div class="f-center">
                        <i class="imoon imoon-5x imoon-libreoffice"></i>
                        <h1> Update Site</h1>
                        <p>Please verify before execute !</p>
                        <p>&nbsp;</p>
                    </div>
                    <div class="panel" style="border:6px solid rgba(204, 204, 204,0.5)">
                        <div class="panel-heading">
                            <span class="panel-title"><i class="imoon imoon-quill"></i> Input Informations</span>
                        </div>
                        <div class="panel-body">
                            <form method="post" class="form-horizontal">
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"></span>
                                        <input type="text" class="form-control" name="regional"  placeholder="Input Regional" value="{{ infoSite.regional }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"></span>
                                        <input type="text" class="form-control" name="poc" placeholder="Input Poc" value="{{ infoSite.poc }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"></span>
                                        <input type="text" class="form-control" name="prodef" placeholder="Input Prodef" value="{{ infoSite.prodef }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"></span>
                                        <input type="text" class="form-control" name="site_id" placeholder="Input Site Id" value="{{ infoSite.siteId }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"></span>
                                        <input type="text" class="form-control" name="site_name" placeholder="Input Site Name" value="{{ infoSite.siteName }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"></span>
                                        <input type="text" class="form-control" name="tower_id" placeholder="Input Tower Id" value="{{ infoSite.towerId }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"></span>
                                        <input type="text" class="form-control" name="address" placeholder="Input Address" value="{{ infoSite.address }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"></span>
                                        <input type="text" class="form-control" name="fop" placeholder="Input Fop" value="{{ infoSite.fop }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"></span>
                                        <input type="text" class="form-control" name="longitude" placeholder="Input Longitude" value="{{ infoSite.longitude }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"></span>
                                        <input type="text" class="form-control" name="latitude" placeholder="Input Latitude" value="{{ infoSite.latitude }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"></span>
                                        <input type="text" class="form-control" name="existing_system" placeholder="Input Existing System" value="{{ infoSite.existingSystem }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"></span>
                                        <input type="text" class="form-control" name="remark" placeholder="Input Remark" value="{{ infoSite.remark }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"></span>
                                        <input type="text" class="form-control" name="stats" placeholder="Input Stats" value="{{ infoSite.stats }}">
                                    </div>
                                </div>

                                <div class="form-group" style="margin-bottom:0 !important;">
                                    <div class="col-lg-12">
                                        <input type="submit" value="Update Site" class="btn btn-primary btn-block btn-flat">
                                    </div>
                                </div>
                        </div>
                        </form>


                    </div>

                </div>

            </div>
            <div class="col-md-3">
                &nbsp;
            </div>

        </div>

        </div>
    </section>
{% endblock %}